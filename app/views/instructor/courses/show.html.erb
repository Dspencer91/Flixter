<br />

<div class="booyah-box col-10 offset-1">
  <h1><%= current_course.title %></h1>
  <%= image_tag current_course.image.url, class: 'img-fluid' %>
  <br />
  <div class="row">
    <div class="col-sm-4 col-12">
      <span class="badge badge-default">
        <%= number_to_currency current_course.cost %>
      </span>

      <% if current_user && current_user == current_course.user %>
        <br />
        <br />
        <%= link_to 'Administer', instructor_course_path(current_course), class: 'btn btn-danger btn-large' %>
      <% end %>
    </div>

    <div class="col-sm-8 col-12">
      <%= current_course.description %>
    </div>
  </div>

  <div class="col-12">
    <% current_course.sections.each do |section| %>
      <div class="section">
        <%= section.title %>
        <% section.lessons.each do |lesson| %>
          <div class="lesson">
            <ul>
              <% section.lessons.rank(:row_order).each do |lesson| %>
                <li>
                  <b><%= lesson.title %></b>
                  -
                  <%= lesson.subtitle %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>